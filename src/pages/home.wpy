<template>
  <view class="container">
    <swiper class="swiper" indicator-active-color="{{indicatorActiveColor}}" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="true">
      <block wx:for="{{adList}}" wx:key="key">
        <swiper-item>
          <image src="{{item.picUrl}}" class="slide-image" @tap="goToAdvert({{item.advertUrl}})" />
        </swiper-item>
      </block>
    </swiper>
    <van-row>
      <van-col>
        <view class="coupon-header">选购立减</view>
      </van-col>
    </van-row>
    <van-row gutter="4">
      <van-col span="6">
        <image src="{{coupons[0].src}}" class="coupon" @tap="getCoupon(0)"></image>
      </van-col>
      <van-col span="6">
        <image src="{{coupons[1].src}}" class="coupon" @tap="getCoupon(1)"></image>
      </van-col>
      <van-col span="6">
        <image src="{{coupons[2].src}}" class="coupon" @tap="getCoupon(2)"></image>
      </van-col>
      <van-col span="6">
        <image src="{{coupons[3].src}}" class="coupon" @tap="getCoupon(3)"></image>
      </van-col>
    </van-row>
    <video wx:for="{{videos}}" wx:key="item" src="{{item.video}}" class="home-video" autoplay="{{true}}"></video>
    <van-row >
      <van-col span="8">
        <navigator  open-type="navigate" url="/pages/free_page?page=about1" >
          <image src="{{about[0].src}}" class="about"></image>
        </navigator>
      </van-col>
      <van-col span="8">
        <navigator open-type="navigate" url="/pages/free_page?page=about2" >
          <image src="{{about[1].src}}" class="about"></image>
        </navigator>
      </van-col>
      <van-col span="8">
        <navigator open-type="navigate" url="/pages/free_page?page=about3" >
          <image src="{{about[2].src}}" class="about"></image>
        </navigator>
      </van-col>
    </van-row>
    <van-row>
      <image class="footer" src="{{footer.src}}"></image>
    </van-row>
  </view>
</template>
<script>
import wepy from 'wepy';
import tip from '@/utils/tip'
import Discover from '@/components/discover'
import Bombscreen from '@/components/bomb_screen'
import BottomLoadMore from "../components/common/bottomLoadMore"
import Placeholder from "../components/common/placeholder"
export default class Home extends wepy.page {
  config = {
    navigationBarTitleText: '恒洁卫浴',
  }
  components = {
    discover: Discover,
    bottomLoadMore: BottomLoadMore,
    placeholder: Placeholder,
    bombscreen: Bombscreen
  }
  data = {
    indicatorDots: true,
    autoplay: true,
    interval: 3000,
    duration: 1000,
    indicatorActiveColor: "#fff",
    discoverList: [],
    videos:[],
    //是否有数据
    is_empty: false,
    //当前页面
    currentPage: 1,
    //总页数
    page_total: 0,
    //是否显示 底部loading
    showLoading: true,
    //防止重复加载
    preventRepeatReuqest: false,
    //广告列表
    adList: [],
    tps: 0,
    is_show_alert: true,
    about:[],
    footer:{},
    coupons:[]
  }
  async getDiscoverList(currentPage, size) {
    let that = this;
    wx.cloud.callFunction({
      name: 'getHomeDiscoverList',
      data:{
        page: currentPage || 1,
        size: size || 10
      }
    }).then(result => {
      let res = result.result;
      that.discoverList = [...that.discoverList, ...res.data];
      that.page_total = res.page_total;
      if (res.total == 0) {
        //暂无数据
        that.is_empty = true;
      }
      that.showLoading = false;
      that.$apply();
    });
  }
  async getHomeVideo(){
    const db = wx.cloud.database();
    db.collection('HomeVideo').get().then(res => {this.videos = res.data;this.$apply();});
  }

  async getAboutPic(){
    const db = wx.cloud.database();
    db.collection('About').orderBy('seq', 'asc').get().then(res => {this.about = res.data;this.$apply();});
  }
  async getFooterPic(){
    const db = wx.cloud.database();
    db.collection('Footer').get().then(res => {this.footer = res.data[0];this.$apply();});
  }
  async getAdList() {
    let that = this;
    wx.cloud.callFunction({
      name: 'getAdList',
    }).then(res=>{
      that.adList = res.result.data;
      that.$apply();
    })
  }
  onLoad() {
    let that = this;
    this.discoverList = [];
    this.getAboutPic();
    this.getFooterPic();
    this.getCouponPic();
    this.getHomeVideo();
    this.getAdList();
  }

  async getCouponPic(){
    const db = wx.cloud.database();
    db.collection('Coupons').orderBy('seq', 'asc').get().then(res => {this.coupons = res.data;this.$apply();});
  }
  computed = {}
  methods = {
    async getCoupon(id){
    let setting = await wepy.getSetting()
    if (!(setting.authSetting)['scope.userInfo']) {
      tip.error("请先登录授权");
      setTimeout(() => {
        wepy.redirectTo({
          url: '/pages/authorize'
        });
      }, 2000);
      return;
    }
      let downUrl = this.coupons[id].downUrl;
      wepy.downloadFile({
          url: downUrl,
      })
      .then(res=>{
        if(res.statusCode === 200){
          return wepy.saveImageToPhotosAlbum({
             filePath	: res.tempFilePath
          });
        }
      })
      .then(res=>{
        tip.success("保存成功");
        console.log(res);
      })
      .catch(err => {
        tip.error("保存失败");
        console.log(err);
      })
    },
    goToAdvert(url) {
      console.log("url===" + url);
      if (url.length == 0) {
        return;
      }
      wepy.navigateTo({
        url: url
      })
    },
    onShareAppMessage: function(res) {
      if (res.from === 'button') {
        // 来自页面内转发按钮
        console.log(res.target)
      }
      return {
        title: `恒洁卫浴`,
        path: '/pages/home',
        success: function(res) {
          // 转发成功
        },
        fail: function(res) {
          // 转发失败
        }
      }
    },
    alertCallback() {
      tip.alert('跳转');
    },
    closeAlert() {
     // tip.alert('关闭');
    }
  }
  events = {}
  //加载更多
  onReachBottom() {
  };
}

</script>
